openapi: 3.1.0
info:
  title: Spotify Playlist Creator API
  version: 1.0.0
servers:
  - url: http://127.0.0.1:5000
paths:
  /create_playlist:
    post:
      summary: Create a playlist based on user data
      operationId: createPlaylist
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                client_id:
                  type: string
                client_secret:
                  type: string
                redirect_uri:
                  type: string
                user_id:
                  type: string
                genres:
                  type: array
                  items:
                    type: string
      responses:
        '200':
          description: Playlist created successfully
          content:
            application/json:
              schema:
                type: object
                properties:
                  playlist_url:
                    type: string
      security:
        - oauth2: []
components:
  securitySchemes:
    oauth2:
      type: oauth2
      flows:
        authorizationCode:
          authorizationUrl: https://accounts.spotify.com/authorize
          tokenUrl: https://accounts.spotify.com/api/token
          scopes:
            playlist-modify-public: Modify public playlists
            playlist-modify-private: Modify private playlists
            user-library-read: Read user library
  schemas:
    PlaylistResponse:
      type: object
      properties:
        playlist_url:
          type: string
